@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="row">
    <div class="col-md-8 mx-auto">
        <section>
            <form id="account" class="formRegisterPanel mt-md-5 ps-3 pe-3 pb-2" method="post">
                <h2>Log in to your account</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3 shadow-sm">
                    <input asp-for="Input.Username" class="form-control" autocomplete="username" aria-required="true" placeholder="Username" />
                    <label asp-for="Input.Username" class="form-label">Username</label>
                    <span asp-validation-for="Input.Username" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3 shadow-sm">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div class="mb-3">
                    Don't have an account?
                    <a class="icon-link icon-link-hover" href="/Auth/Account/Register" style="text-decoration: none;">
                        <span style="text-decoration: underline;">Sign Up</span>
                        <i class="bi fa-solid fa-arrow-right" style="text-decoration: none;"></i>
                    </a>
                </div>
                <div class="text-center">
                    <button id="login-submit" type="submit" class="btn btn-primary fw-bold btn-shadow" style="width:65%"><i class="fa-solid fa-right-to-bracket"></i> Log in</button>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<script src="~/js/Utilities.js"></script>
<script>
    document.addEventListener("DOMContentLoaded", function (event) {
        const btnLoginSubmit = document.querySelector('#login-submit');
        btnLoginSubmit.addEventListener('click', function (event) {
            if (!Utilities.BindFormValidity('account')) return;
            btnLoginSubmit.innerHTML = `<i class="fa-solid fa-spinner fa-spin"></i> Logging in...`;
            Utilities.RemoveBtnPointerEvents(btnLoginSubmit);
        });
    });
</script>