@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<header>
    <h1>@ViewData["Title"]</h1>

    <p>You have successfully logged out.</p>

    <div class="row mt-5">
        <div class="col-md-3">
            <div class="sm-box">
                <div style="width:40%">
                    <a type="button" class="btn btn-primary float-end" href="/">Home</a>
                </div>
                <div style="width:20%">
                    <div class="sm-vertical-line">or</div>
                </div>
                <div style="width:40%">
                    <a type="button" class="btn btn-outline-secondary" asp-area="Auth" asp-page="/Account/Login">Log In</a>
                </div>
            </div>
        </div>
    </div>
</header>

<script src="~/js/Utilities.js"></script>
<script>
    document.addEventListener("DOMContentLoaded", function (event) {
        Utilities.AjaxLoadingIconHide();
    });
</script>