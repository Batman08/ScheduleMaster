<div class="modal fade" id="modalCreateEvent" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <h5 class="modal-title text-white fws-bold" id="exampleModalLabel"><i class="fa-regular fa-calendar-plus fw-bold"></i> Create Event</h5>
            </div>
            <div class="modal-body">
                <div id="divCreateEventModalLoadingPanel" class="pt-4 pb-5" style="display: none;">
                    <div class="text-center" style="color: lightgrey;">
                        <div class="display-2">
                            <i class="fas fa-spinner fa-spin" aria-hidden="true"></i>
                        </div>
                        <div class="fw-bold fs-4">Loading Event...</div>
                    </div>
                </div>
                <form id="formEditCard" method="post">
                    <div class="p-3 pb-3 SM-tile" style="background: #f3f3f3; box-shadow: 0px 0px 0px 0px rgba(0, 0, 0, 0.1);">
                        <!-- Title Field -->
                        <div class="mb-3">
                            <label for="txtTitle" class="form-label fw-bold">Title:</label>
                            <input type="text" id="txtTitle" class="form-control" placeholder="Event Title" aria-label="Event Title" aria-describedby="basic-addon1" maxlength="50" required>
                        </div>


                        <!-- Info Field -->
                        <div class="mb-3">
                            <label for="txtInfo" class="form-label fw-bold">Info:</label>
                            <textarea id="txtInfo" class="form-control" rows="3" maxlength="256" placeholder="Event Info" aria-label="Event Info" required></textarea>
                        </div>
                    </div>

                    <hr />

                    <div style="float: right; padding-right: 15px;">
                        <span style="padding-right: 5px;">
                            <button type="button" class="btn btn-secondary btn-shadow" data-bs-dismiss="modal"><i class="fas fa-ban fa-fw"></i> Cancel</button>
                        </span>
                        <button type="submit" class="btn btn-primary btn-shadow btn-block"><i class="fas fa-save"></i> Save</button>
                    </div>
                    <input type="hidden" id="hiddenData">
                </form>
            </div>
        </div>
    </div>
</div>